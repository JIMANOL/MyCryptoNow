<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.Bienvenida.BienvenidaFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="-175dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/espaciado_normal"
                android:fontFamily="@font/robotoslab_bold"
                android:text="@string/bienvenido"
                android:textSize="@dimen/titulo_principal" />

            <TextView
                android:id="@+id/tvNombreUsuarioHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/espaciado_normal"
                android:fontFamily="@font/robotoslab_semibold"
                android:text="@string/app_nombre"
                android:textSize="@dimen/grande_text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/espaciado_normal"
                android:justificationMode="inter_word"
                android:fontFamily="@font/robotoslab_regular"
                android:layout_marginLeft="@dimen/espaciado_normal"
                android:layout_marginRight="@dimen/espaciado_normal"
                android:text="En esta aplicación podrás tener control sobre el valor actual de tus crypto monedas en el mercado. Navega en el menú para encontrar mas cosas interesantes. "
                android:textSize="@dimen/pequenia_text" />

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="@dimen/espaciado_normal"
                app:lottie_rawRes="@raw/bienvenida"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"/>



        </LinearLayout>

    </ScrollView>

</FrameLayout>