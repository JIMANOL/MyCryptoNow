<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.reporteerrores.reporteErrores">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="25dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/conversacion"
                android:gravity="center"
                android:textSize="@dimen/grande_text"/>

             <ListView
                android:layout_width="match_parent"
                 android:id="@+id/chat_errores_user"
                android:layout_weight="2"
                android:divider="#fff"
                android:layout_height="wrap_content"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:ems="10"
                    android:hint="@string/ingrese_mensaje"
                    android:inputType="text"
                    android:paddingHorizontal="10dp"
                    android:text="" />

                <ImageButton
                    android:id="@+id/btn_enviar_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="10dp"
                    android:background="@android:drawable/ic_menu_send"
                    android:padding="20dp"
                    android:scaleType="fitCenter" />
            </LinearLayout>


        </LinearLayout>



    </ScrollView>

</FrameLayout>