<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.listacryptos.ListaCryptosFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/espaciado_normal"
        android:layout_marginRight="@dimen/espaciado_normal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/titulo_principal"
            android:layout_marginTop="@dimen/espaciado_amplio"
            android:text="@string/lista_cryptos"
            android:layout_gravity="center"
            android:fontFamily="@font/robotoslab_bold"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvListaCryptos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/espaciado_normal"/>

    </LinearLayout>

</FrameLayout>