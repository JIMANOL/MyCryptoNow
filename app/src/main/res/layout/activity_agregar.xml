<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.agregar.Agregar"
    android:background="?android:colorBackground" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="25dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/agregar"

                android:textSize="30dp"
                android:gravity="center"/>
            <ImageView
                android:id="@+id/ivcQRNP"
                android:layout_width="196dp"
                android:layout_height="170dp"
                android:layout_gravity="center"
                android:contentDescription="@string/qr"
                app:srcCompat="@drawable/ic_baseline_qr_code_scanner_24"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/descripcion_agregar"

                android:textSize="15dp"
                android:gravity="left"/>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etdireccionAg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:enabled="false"
                    android:layout_margin="20dp"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/tvMensajedirec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="@dimen/espaciado_pequenia"
                android:fontFamily="@font/robotoslab_regular"
                android:text="Direccion invalida, Scanee codigo QR"
                android:textSize="@dimen/pequenia_text"
                android:textColor="@color/red"
                android:visibility="gone"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etcantidadAg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:layout_margin="20dp"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/tvMensajecant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="@dimen/espaciado_pequenia"
                android:fontFamily="@font/robotoslab_regular"
                android:text="Ingrese la cantidad"
                android:textSize="@dimen/pequenia_text"
                android:textColor="@color/red"
                android:visibility="gone"/>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etnombreAg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:layout_margin="20dp"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/tvMensajenom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="@dimen/espaciado_pequenia"
                android:fontFamily="@font/robotoslab_regular"
                android:text="Ingrese el nombre"
                android:textSize="@dimen/pequenia_text"
                android:textColor="@color/red"
                android:visibility="gone"/>

            <Spinner
                android:id="@+id/spntipoAg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <Button
                    android:id="@+id/btnagregarAg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/btnagregar"
                    android:textSize="18dp"
                    android:layout_margin="20dp"
                    />
                <Button
                    android:id="@+id/btnregresarAg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/btnregresar"
                    android:textSize="18dp"
                    android:layout_margin="20dp"
                    />


            </LinearLayout>



        </LinearLayout>

    </ScrollView>

</FrameLayout>